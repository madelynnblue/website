---
layout: layouts/base.njk
templateClass: tmpl-home
permalink: "/{{page.fileSlug}}/"
---

<div>
  <div class="post-header">
    <div class="post-meta">
      <span>{{date | htmlDateString}}</span>
    </div>
  </div>

  <div class="post-content">
    {{ content | safe }}
  </div>

  {% if chiptune %}
    <p>
      <a href="https://chiptune.app/?play={{ chiptune }}">[original audio]</a>
    </p>
  {% endif %}

  {% if youtube %}
    <p>
      <a href="https://www.youtube.com/watch?v={{ youtube }}">[original audio]</a>
    </p>
  {% endif %}

  {% if opus %}
    <p>
      rendered audio:
      <div><audio controls src="/public/opus/{{ opus }}.opus"></div>
    </p>
  {% endif %}

  {% if lilypond %}
    <div>
      <a href="https://madelynnblue.github.io/lilypond/{{ lilypond }}.pdf">[pdf]</a>
      <a href="https://github.com/madelynnblue/lilypond/blob/main/{{ lilypond }}.ly">[lilypond source]</a>
    </div>
    <embed src="https://madelynnblue.github.io/lilypond/{{ lilypond }}.pdf" width="100%" height="680" type="application/pdf">
  {% endif %}
</div>
